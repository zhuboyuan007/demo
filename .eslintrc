{
  "plugins": ["babel"],
  "extends": ["airbnb-base"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {"impliedStrict": true}
  },
  "rules": {
    "max-len": ["warn", 120, { "ignoreStrings": true }]
  },
  "globals": {
    "it": true,
    "describe": true
  }
}
